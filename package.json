{
  "name": "nuxt-blog-service",
  "version": "1.0.0",
  "description": "My laudable Nuxt.js project",
  "author": "kazukitokunaga",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "heroku-postbuild": "npm run build",
    "generate": "nuxt generate",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@nuxtjs/auth": "^4.5.3",
    "@nuxtjs/axios": "^5.3.6",
    "cookie-universal-nuxt": "^2.0.14",
    "cross-env": "^5.2.0",
    "element-ui": "^2.4.6",
    "firebase": "^5.8.0",
    "firebase-tools": "^6.3.0",
    "lodash.clonedeep": "^4.5.0",
    "moment": "^2.23.0",
    "nuxt": "^2.3.4",
    "universal-cookie": "^3.0.7",
    "vue-markdown": "^2.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel": "^6.23.0",
    "babel-preset-vue-app": "^2.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.11.0",
    "vue-jest": "^3.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/app/$1",
    "^@@/(.*)$": "<rootDir>/$1",
    "^~/(.*)$": "<rootDir>/app/$1",
    "^~~/(.*)$": "<rootDir>/$1"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "vue"
  ],
  "collectCoverageFrom": [
    "app/**/*.{js, vue}"
  ],
  "babel": {
    "env": {
      "test": {
        "presets": [
          "vue-app"
        ]
      }
    }
  }
}
